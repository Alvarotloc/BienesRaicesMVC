extends ../layout/index

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block contenido
    div(class='py-10')
        h1(class='text-4xl font-extrabold text-center') Bienes
            span(class='font-normal') Raices 
        h2(class='text-center text-2xl my-4 font-extrabold')= title

        div(class='bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10')

            form(action="")
                fieldset(class='space-y-8')  
                    div(class='space-y-5')
                        h3(class='text-lg leading-6 font-medium text-gray-900') Información General 
                        p(class='text-gray-600') Añade información sobre la propiedad en venta

                        div.mb-5
                            label(class='block text-xs uppercase text-gray-500 mb-2 font-bold' for='titulo') Título de Anuncio
                            input(type="text" id='titulo' name='titulo' class='w-full px-3 py-2 border border-slate-300 rounded' placeholder='Título Propiedad, ej: Casa en la Playa')

                        div(class='md:flex md:gap-4')            
                            div(class='mb-5 md:w-1/2')
                                label(class='block text-xs uppercase text-gray-500 mb-2 font-bold' for='categoria') Categoría
                                select(id='categoria' name='categoria' class='w-full px-3 py-2 border border-slate-300 rounded')
                                    optgroup 
                                        option(value="") - Seleccione - 
                            div(class='mb-5 md:w-1/2')
                                label(class='block text-xs uppercase text-gray-500 mb-2 font-bold' for='precio') Precio
                                select(id='precio' name='precio' class='w-full px-3 py-2 border border-slate-300 rounded')
                                    optgroup 
                                        option(value="") - Seleccione - 


                        div(class='md:flex md:gap-4')            
                            div(class='mb-5 md:w-1/3')
                                label(class='block text-xs uppercase text-gray-500 mb-2 font-bold' for='categoria') Habitaciones
                                select(id='habitaciones' name='habitaciones' class='w-full px-3 py-2 border border-slate-300 rounded')
                                    optgroup 
                                        option(value="") - Seleccione - 
                                        - let n = 1;
                                            while n < 10
                                                option(value=n) #{n++}
                            div(class='mb-5 md:w-1/3')
                                label(class='block text-xs uppercase text-gray-500 mb-2 font-bold' for='precio') Estacionamiento
                                select(id='estacionamiento' name='estacionamiento' class='w-full px-3 py-2 border border-slate-300 rounded')
                                    optgroup 
                                        option(value="") - Seleccione - 
                                        - let i = 1;
                                            while i < 5
                                                option(value=i) #{i++}
                            div(class='mb-5 md:w-1/3')
                                label(class='block text-xs uppercase text-gray-500 mb-2 font-bold' for='precio') Baños
                                select(id='banhos' name='banhos' class='w-full px-3 py-2 border border-slate-300 rounded')
                                    optgroup 
                                        option(value="") - Seleccione - 
                                        - let j = 1;
                                            while j < 5
                                                option(value=j) #{j++}


                        div(class='border-gray-200 border-t py-5 space-y-5')
                            h3(class='text-lg leading-6 font-medium text-gray-90') Ubicación
                            p(class='text-gray-600') Ubica la propiedad en el mapa
                            div(id='mapa' class='h-96')


                            div 
                                p(class='calle')
                            
                            input(type="hidden" name='calle' id='calle')
                            input(type="hidden" name='lat' id='lat')
                            input(type="hidden" name='lng' id='lng')
block scripts
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="https://unpkg.com/esri-leaflet@3.0.8/dist/esri-leaflet.js")
    script(src="https://unpkg.com/esri-leaflet-geocoder@2.2.13/dist/esri-leaflet-geocoder.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/leaflet-geosearch/2.7.0/bundle.min.js")
    script(src="/js/mapa.js") 