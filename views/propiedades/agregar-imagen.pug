extends ../layout/admin

block styles
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.3/dropzone.css")
    meta(name='csrf-token' content= csrfToken)

block contenido
    div(class='py-10')
        h1(class='text-4xl font-extrabold text-center') Bienes
            span(class='font-normal') Raices 
        h2(class='text-center text-2xl my-4 font-extrabold')= title

        div(class='bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10')

            form(id='imagen' action=`/propiedades/agregar-imagen/${propiedad.id}` method='POST' class='dropzone border-dashed mb-5 border-2 w-full min:h-96 h-auto rounded ')
                input(type="hidden" name='_csrf' value= csrfToken)  

            button(type="button" id='publicar' class='w-full py-3 bg-indigo-600 hover:bg-indigo-700 rounded text-white font-bold uppercase cursor-pointer transition-colors' ) Publicar Propiedad

block scripts
    script(src="/js/agregarImagen.js") 
