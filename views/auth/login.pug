extends ../layout/index

block contenido
    div(class='py-10 min-h-screen')
        h1(class='text-4xl font-extrabold text-center') Bienes
            span(class='font-normal') Raices 
        h2(class='text-center text-2xl my-4 font-extrabold')= title

        if errores
            div(class='max-w-md mx-auto my-10')
                each error in errores 
                    p(class='bg-red-500 text-white border-2 text-sm border-red-700 rounded-sm w-full text-center p-2 mb-1 font-bold')= error.msg


        div(class='mt-8 mx-auto max-w-md') 
            div(class='bg-white py-8 px-4 shadow rounded-md')
                form(method='POST' action='/auth/login' noValidate)
                    fieldset 
                        input(type="hidden" name='_csrf' value= csrfToken)
                        div.mb-5
                            label(class='block text-sm uppercase text-slate-700 mb-2 font-bold' for='email') Tu Email
                            input(type="email" id='email' name='email' class='w-full px-3 py-2 border border-slate-300 rounded' placeholder='Ingresa tu email')
                        div.mb-5
                            label(class='block text-sm uppercase text-slate-700 mb-2 font-bold' for='password') Tu Contrase침a
                            input(type="password" id='password' name='password' class='w-full px-3 py-2 border border-slate-300 rounded' placeholder='Ingresa tu contrase침a')
                        input(type="submit" value='Iniciar Sesi칩n' class='w-full py-3 text-white font-bold bg-indigo-600 hover:bg-indigo-700 transition-colors cursor-pointer rounded-sm')
                    div(class='flex justify-between items-center mt-2')
                        a(class='text-xs text-slate-500 hover:underline' href="/auth/registro") Registrar Cuenta 
                        a(class='text-xs text-slate-500 hover:underline' href="/auth/olvide-password") Recuperar Contrase침a